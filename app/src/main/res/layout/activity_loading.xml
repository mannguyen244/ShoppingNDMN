<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manng.csc_25_07_navigationdrawerlayout2.activity.LoadingActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/amazon"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9f000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgOneClick"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_click" />

        <TextView
            android:id="@+id/textOneClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="1Click"
            android:textColor="#FBB117"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textOneClickDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Click là sẽ thích !!!"
            android:textAlignment="center"
            android:textColor="#FBB117"
            android:textSize="24dp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:id="@+id/textLoading"
        android:textColor="#FBB117"
        android:paddingLeft="10dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="22dp"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:id="@+id/textLoadingNumber"
        android:textColor="#FBB117"
        android:paddingLeft="10dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="22dp"
        android:textSize="12dp"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:progressTint="#FBB117" />
</FrameLayout>
