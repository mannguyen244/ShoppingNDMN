<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    style="@android:style/Widget.ActionButton"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeCart">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCart"
            android:gravity="center"
            android:layout_centerInParent="true">
            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:id="@+id/btn_cart_tool_bar"
                android:background="@drawable/ic_shopping_cart_black_24dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/notification_number_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/btnCart"
            android:background="@drawable/background_number_update"
            android:text="0"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:visibility="visible"
            android:textSize="10dp"
            android:textStyle="bold" />

    </RelativeLayout>







</RelativeLayout>
