<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_text">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:src="@mipmap/ic_delivery"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_1_title"
            android:textSize="@dimen/slide_title"
            android:textColor="@color/light_dot_wellcome"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_1_description"
            android:paddingLeft="@dimen/description_padding"
            android:paddingRight="@dimen/description_padding"
            android:textAlignment="center"
            android:textColor="@color/bg_wellcome"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/slide_description"/>
    </LinearLayout>
</RelativeLayout>
