<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewFlashSale"
    app:cardCornerRadius="3dp"
    android:layout_margin="2dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/imgFlashSaleItem"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtPriceFlashSale"
            android:textColor="#FBB117"
            android:text="đ 399.000"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:paddingBottom="15dp"/>
        <ProgressBar
            android:id="@+id/progressBarFlashSale"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:minHeight="10dp"
            android:maxHeight="20dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:layout_gravity="bottom"
            android:progressTint="#FBB117"
            android:backgroundTint="#efc681"
            android:secondaryProgressTint="#efc681"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtCountFlashSale"
            android:textColor="#FFFFFF"
            android:text="Đã bán 27"
            android:gravity="bottom"
            android:paddingBottom="7dp"
            android:textAlignment="center"
            android:textSize="10dp" />
    </FrameLayout>
</android.support.v7.widget.CardView>

